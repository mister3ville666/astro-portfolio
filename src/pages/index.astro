---
// src/pages/index.astro
import BaseLayout from '../layouts/baselayout.astro';
import Header from '../components/header.astro'; // Import Header for the specific homepage hero
import TrackCard from '../components/trackcard.astro'; // For featured tracks
// No need to import aboutsection, service-card, testimonialcard, contactform, sociallinks directly here
// unless you use smaller snippets of them

// Important: Use the EXACT Spotify embed URLs from your screenshots/Spotify embed code
const spotifyEmbedUrlHomie = "https://open.spotify.com/embed/track/7IiqNeOvceHKDdO7T6JuL5iq?utm_source=generator"; // From your Homie screenshot
const spotifyEmbedUrlThinkingAboutYou = "https://open.spotify.com/embed/track/4IuLqGCJ5Vp54XO0iU11I?utm_source=generator"; // From Thinking About You screenshot
---
<BaseLayout
    title="Babypauul - Home"
    description="Babypauul: Official website for producer, engineer, and artist. Discover music, services, and contact info."
>
    {/* The main Hero Section for the landing page */}
    <Header
        title="Babypauul."
        subtitle="Crafting next-level sound with clarity, energy, and emotion."
        showCtaButtons={true}
        backgroundImage="https://i.postimg.cc/RVHhYTyL/Killstreetstudios.png" {/* Your background image */}
    />

    {/* Featured Work section on the homepage */}
    <section id="featured-work">
        <h2>âœ¨ Featured Work</h2>
        <p style="text-align: center; margin-bottom: 2rem; color: var(--subtext);">Check out my latest and greatest productions and collaborations.</p>
        <div class="portfolio-grid">
            <TrackCard
                title="Homie"
                spotifyEmbedUrl={spotifyEmbedUrlHomie}
                artist="Babypauul"
            />
            <TrackCard
                title="Thinking About You"
                spotifyEmbedUrl={spotifyEmbedUrlThinkingAboutYou}
                artist="Babypauul"
            />
            {/* You can add more featured TrackCards here if you want */}
        </div>
        <div style="text-align:center; margin-top:2rem;">
            <a href="/songs" class="service-btn">View All Songs</a>
            <a href="/beats" class="service-btn" style="margin-left: 1rem;">Explore All Beats</a>
        </div>
    </section>

    {/* Short "Why Choose Me" section or a compelling call to action */}
    <section id="why-choose-me">
        <h2 style="text-align: center;">Why Babypauul?</h2>
        <p style="text-align: center; max-width: 800px; margin: 0 auto 2rem auto; color: var(--subtext);">
            With a passion for pushing sonic boundaries, I bring precision, power, and raw emotion to every project. Your sound, elevated.
        </p>
        <div style="text-align:center;">
            <a href="/about" class="cta-btn">Learn More About My Journey</a>
        </div>
    </section>

</BaseLayout>