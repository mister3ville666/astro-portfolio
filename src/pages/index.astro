---
// src/pages/index.astro
// This is your corrected and fully functional homepage.

import BaseLayout from '../layouts/baselayout.astro'; // Corrected filename to be all lowercase
import Header from '../components/header.astro';
import TrackCard from '../components/trackcard.astro';

// Your Spotify embed URLs
const spotifyEmbedUrlHomie = "https://open.spotify.com/embed/track/7IbqNeOivzHYdXD7J6uHSq?utm_source=generator";
const spotifyEmbedUrlThinkingAboutYou = "https://open.spotify.com/embed/track/43uLpGO5OagtSVFSAoOIUl?utm_source=generator";
---
<BaseLayout
    title="Babypauul - Home"
    description="Babypauul: Official website for producer, engineer, and artist. Discover music, services, and contact info."
>
    
    <Header />

    <section id="featured-work">
        <h2>âœ¨ Featured Work</h2>
        <p style="text-align: center; margin-bottom: 2rem; color: var(--subtext);">
            Check out my latest and greatest productions and collaborations.
        </p>
        
        <div class="portfolio-grid">
            <TrackCard
                title="Homie"
                spotifyEmbedUrl={spotifyEmbedUrlHomie}
                artist="Babypauul"
            />
            
            <TrackCard
                title="Thinking About You"
                spotifyEmbedUrl={spotifyEmbedUrlThinkingAboutYou}
                artist="Babypauul"
            />
        </div>

        <div style="text-align:center; margin-top:2rem;">
            <a href="/songs" class="service-btn">View All Songs</a>
            <a href="/beats" class="service-btn" style="margin-left: 1rem;">Explore All Beats</a>
        </div>
    </section>

    <section id="why-choose-me">
        <h2 style="text-align: center;">Why Babypauul?</h2>
        <p style="text-align: center; max-width: 800px; margin: 0 auto 2rem auto; color: var(--subtext);">
            With a passion for pushing sonic boundaries, I bring precision, power, and raw emotion to every project. Your sound, elevated.
        </p>
        <div style="text-align:center;">
            <a href="/about" class="cta-btn">Learn More About My Journey</a>
        </div>
    </section>

</BaseLayout>