---
// src/pages/services.astro
import BaseLayout from '../layouts/baselayout.astro';
import ServiceCard from '../components/service-card.astro';
---
<BaseLayout title="Babypauul - Services" description="Explore all professional music production and engineering services offered by Babypauul.">
    <section id="services-full">
        <h2>🛠 Full Services List</h2>
        <div class="services-grid">
            {/* Link these to relevant pages/sections */}
            <ServiceCard icon="🎹" title="Beat Production" description="Original trap & hip-hop instrumentals tailored to your vibe." link="/beats" />
            <ServiceCard icon="🎛️" title="Mixing" description="Stem, vocal, and instrumental mixes with clarity and punch." link="/contact" />
            <ServiceCard icon="📈" title="Mastering" description="Streaming-ready, loudness-optimized masters for all platforms." link="/contact" />
            <ServiceCard icon="🎤" title="Songwriting & Recording" description="Hooks, verses, & vocal recording sessions for your next hit." link="/contact" />
            {/* Add more service cards if you have additional services */}
        </div>
        <div style="text-align:center; margin-top:2rem;">
            <a href="/contact" class="service-btn">Request a Quote</a>
        </div>
    </section>
</BaseLayout>