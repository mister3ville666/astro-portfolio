// src/components/welcome.astro
// Example of a simple welcome component - customize as needed
---
<section id="welcome">
  <h2>Welcome to Babypauul's Official Site</h2>
  <p>Your one-stop destination for elite sound engineering, custom beats, and raw artistry.</p>
  <div style="text-align:center; margin-top:2rem;">
    <a href="/about" class="cta-btn">Discover More</a>
  </div>
</section>

<style>
  #welcome {
    text-align: center;
    padding: 4rem 1.2rem;
    background: linear-gradient(135deg, var(--bg), var(--card));
    border-radius: 16px;
    margin-top: 2rem;
  }
  #welcome h2 {
    color: var(--accent-blue);
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  #welcome p {
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto 2rem auto;
    color: var(--text);
  }
  /* Inherits cta-btn styles from global scope */
</style>