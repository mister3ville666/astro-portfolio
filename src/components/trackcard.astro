---
// src/components/trackcard.astro
interface Props {
  title: string;
  spotifyEmbedUrl: string;
  // If you decide to add album art within the card itself, you'd add:
  // albumArtSrc?: string;
  artist?: string; // Optional: For "Oh No by KID4E, Babypauul"
}

const { title, spotifyEmbedUrl, artist } = Astro.props;
const fullTitle = artist ? `${title} by ${artist}` : `${title} by Babypauul`;
---
<div class="track-card">
  {/* You might add an image here if you prefer to have a static image above the player */}
  <div class="track-player">
    <iframe
      style="border-radius:12px"
      src={spotifyEmbedUrl}
      width="100%"
      height="352"
      frameBorder="0"
      allowfullscreen=""
      allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
      loading="lazy"
      title={`Spotify player for ${fullTitle}`}
    ></iframe>
  </div>
</div>

<style>
  /* Track card specific styles */
  .track-card {
    background: var(--card);
    border-radius: 16px;
    padding: 1.2rem 1rem 1.7rem 1rem;
    box-shadow: 0 2px 12px #00ffff22;
    position: relative;
    text-align: center;
    transition: box-shadow var(--transition), transform var(--transition);
  }
  .track-card:hover {
    box-shadow: 0 6px 24px #B026FF66;
    transform: translateY(-6px) scale(1.02);
  }
  /* If you add .track-art, include its styles here */
  .track-player { margin-bottom: 0.4rem; }
  .track-title {
    font-size: 1.1rem;
    font-weight: bold;
    margin-bottom: 0.4rem;
    color: var(--accent-blue);
  }
</style>