// src/components/header.astro
---
<header class="hero" id="home">
    <div class="hero-content">
        <h1 class="hero-title">Babypauul.</h1>
        <p class="hero-sub">Crafting next-level sound with clarity, energy, and emotion.</p>
        <div class="cta-buttons">
            <a href="/songs" class="cta-btn">Listen</a> {/* Link to new songs page */}
            <a href="/contact" class="cta-btn">Book Now</a> {/* Link to new contact page */}
            <a href="/beats" class="cta-btn">Beats</a> {/* Link to new beats page */}
        </div>
    </div>
</header>

<style>
    /* Hero section specific styles */
    header.hero {
        position: relative;
        width: 100%;
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: url('https://i.postimg.cc/RVHhYTyL/Killstreetstudios.png') center/cover no-repeat;
    }
    header.hero::before {
        content: '';
        position: absolute;
        inset: 0;
        background: rgba(20,20,30,0.72);
        z-index: 1;
    }
    .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding: 2rem;
    }
    .hero-title {
        font-family: var(--font-header);
        font-size: 2.5rem;
        font-weight: 900;
        letter-spacing: 2px;
        color: var(--accent-blue);
        margin-bottom: 0.6rem;
        text-shadow: 0 2px 20px #000a;
        line-height: 1.2;
    }
    .hero-sub {
        font-size: 1.2rem;
        color: var(--text);
        margin-bottom: 2rem;
        font-weight: 400;
    }
    .cta-buttons {
        display: flex;
        justify-content: center;
        gap: 1.2rem;
        flex-wrap: wrap;
    }
    .cta-btn {
        padding: 0.85rem 2.5rem;
        border: none;
        border-radius: 28px;
        background: linear-gradient(90deg, var(--accent-blue), var(--accent-violet));
        color: #18191f;
        font-weight: bold;
        font-size: 1.1rem;
        letter-spacing: 1px;
        box-shadow: 0 4px 16px #0ff4;
        cursor: pointer;
        transition: background var(--transition), transform var(--transition);
        outline: none;
    }
    .cta-btn:hover {
        background: linear-gradient(90deg, var(--accent-red), var(--accent-blue));
        transform: scale(1.07);
        color: var(--text);
    }
</style>