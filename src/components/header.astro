---
// src/components/header.astro
// Defines optional props for the hero section
interface Props {
    title?: string; // Optional custom title
    subtitle?: string; // Optional custom subtitle
    showCtaButtons?: boolean; // Controls visibility of CTA buttons
    backgroundImage?: string; // Optional custom background image URL
}

// Destructures props, providing default values
const {
    title = "Babypauul.",
    subtitle = "Crafting next-level sound with clarity, energy, and emotion.",
    showCtaButtons = true,
    backgroundImage = 'https://i.postimg.cc/RVHhYTyL/Killstreetstudios.png' // Default image from your original hero
} = Astro.props;
---
<header class="hero" style={`background-image: url('${backgroundImage}')`}>
    <div class="hero-content">
        <h1 class="hero-title">{title}</h1>
        <p class="hero-sub">{subtitle}</p>
        {showCtaButtons && (
            <div class="cta-buttons">
                <a href="/songs" class="cta-btn">Listen</a>
                <a href="/contact" class="cta-btn">Book Now</a>
                <a href="/beats" class="cta-btn">Beats</a>
            </div>
        )}
    </div>
</header>

<style>
    /* Specific styles for the hero section */
    header.hero {
        position: relative;
        width: 100%;
        min-height: 80vh; /* Main height of the hero section */
        display: flex;
        align-items: center;
        justify-content: center;
        background: center/cover no-repeat; /* Background image provided by prop */
    }
    header.hero::before {
        content: '';
        position: absolute;
        inset: 0;
        background: rgba(20,20,30,0.72);
        z-index: 1;
    }
    .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding: 2rem;
    }
    .hero-title {
        font-family: var(--font-header);
        font-size: 2.5rem;
        font-weight: 900;
        letter-spacing: 2px;
        color: var(--accent-blue);
        margin-bottom: 0.6rem;
        text-shadow: 0 2px 20px #000a;
        line-height: 1.2;
    }
    .hero-sub {
        font-size: 1.2rem;
        color: var(--text);
        margin-bottom: 2rem;
        font-weight: 400;
    }
    .cta-buttons {
        display: flex;
        justify-content: center;
        gap: 1.2rem;
        flex-wrap: wrap;
    }
    .cta-btn {
        padding: 0.85rem 2.5rem;
        border: none;
        border-radius: 28px;
        background: linear-gradient(90deg, var(--accent-blue), var(--accent-violet));
        color: #18191f;
        font-weight: bold;
        font-size: 1.1rem;
        letter-spacing: 1px;
        box-shadow: 0 4px 16px #0ff4;
        cursor: pointer;
        transition: background var(--transition), transform var(--transition);
        outline: none;
    }
    .cta-btn:hover {
        background: linear-gradient(90deg, var(--accent-red), var(--accent-blue));
        transform: scale(1.07);
        color: var(--text);
    }
    /* Responsive adjustments for hero */
    @media (max-width: 600px) {
        header.hero { min-height: 60vh; }
        .hero-title { font-size: 1.5rem; }
    }
</style>